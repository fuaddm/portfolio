---
import SectionTitle from './SectionTitle.astro';

import { content } from '../static-content';
---

<div class="inside-container flex flex-col gap-6">
  <SectionTitle title={content.contactsTitle} />
  <div class="flex flex-col gap-3">
    {
      content.contacts.map((contact) => (
        <a
          href={contact.link}
          target="_blank"
          class="hover:bg-surface-container flex items-center justify-between transition ease-out"
        >
          <div>{contact.name}</div>
          <div class="text-on-surface-variant hover:text-on-surface transition">{contact.value}</div>
        </a>
      ))
    }
  </div>
</div>
