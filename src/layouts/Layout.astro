---
const { pageTitle } = Astro.props;
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />

    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Freeman&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />

    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>{pageTitle || 'Fuaddm'}</title>
  </head>
  <body>
    <div class="container">
      <div
        class="border-outline-variant/30 divide-outline-variant/30 flex flex-col divide-y divide-dashed border-x border-dashed"
      >
        <slot />
      </div>
    </div>
  </body>
</html>
